<%- include('../partials/header', { isDashboard: true }) %>
<script src="/js/add-customer.js" defer></script>

<div class="dashboard-container">
    <header class="dashboard-header">
        <h1>Admin Dashboard</h1>
        <div class="header-nav">
            <a href="/admin/add-vendor" class="nav-button">Add Vendor</a>
            <a href="/admin/add-customer" class="nav-button active">Add Customer</a>
            <a href="/admin/inventory" class="nav-button">Inventory</a>
            <a href="/admin/sales" class="nav-button">Sales Charges</a>
            <form action="/auth/logout" method="GET" style="display: inline;">
                <button type="submit" class="nav-button logout-btn">Logout</button>
            </form>
        </div>
    </header>

    <main class="dashboard-content">
        <div class="content-section">
            <div class="search-section">
                <h2>Search Customer</h2>
                <div class="search-bar">
                    <input type="text" id="customerSearch" placeholder="Search by name, email, or phone...">
                    <button type="button" id="searchBtn">Search</button>
                </div>
            </div>

            <div id="searchResults" class="search-results" style="display: none;">
                <h3>Search Results</h3>
                <div id="resultContent"></div>
            </div>

            <div class="customer-form">
                <h2>Customer Details</h2>
                <form id="customerForm">
                    <input type="hidden" id="customerId" name="id">
                    <div class="form-group">
                        <label for="name">Customer Name*</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="firmName">Firm Name*</label>
                        <input type="text" id="firmName" name="firm_name" required>
                    </div>
                    <div class="form-group">
                        <label for="firmLocation">Firm Location*</label>
                        <input type="text" id="firmLocation" name="firm_location" required>
                    </div>
                    <div class="form-group">
                        <label for="gstNumber">GST Number*</label>
                        <input type="text" id="gstNumber" name="gst_number" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email">
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone Number*</label>
                        <input type="tel" id="phone" name="phone_number" required>
                    </div>
                    <div class="form-group">
                        <label for="address">Address</label>
                        <textarea id="address" name="address" rows="3"></textarea>
                    </div>
                    <div class="form-actions">
                        <button type="submit" id="saveCustomer">Save Customer</button>
                        <button type="button" id="clearForm">Clear Form</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %> 