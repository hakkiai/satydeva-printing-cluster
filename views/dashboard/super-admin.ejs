<%- include('../partials/header', { isDashboard: true }) %>

<div class="dashboard-container">
    <header class="dashboard-header">
        <h1>Super Admin Dashboard</h1>
        <div class="header-nav">
            <a href="/super-admin/add-user" class="nav-button <%= path === '/super-admin/add-user' ? 'active' : '' %>">Add User</a>
            <a href="/super-admin/inventory" class="nav-button <%= path === '/super-admin/inventory' ? 'active' : '' %>">Inventory</a>
            <form action="/auth/logout" method="GET" style="display: inline;">
                <button type="submit" class="nav-button logout-btn">Logout</button>
            </form>
        </div>
    </header>

    <main class="dashboard-content">
        <div class="content-section">
            <h2>Welcome, <%= user.username %></h2>
            <div class="dashboard-stats">
                <p>Manage system users and inventory from here.</p>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %> 