<%- include('../partials/header', { isDashboard: true }) %>
<script src="/js/add-vendor.js" defer></script>

<div class="dashboard-container">
    <header class="dashboard-header">
        <h1>Admin Dashboard</h1>
        <div class="header-nav">
            <a href="/admin/add-vendor" class="nav-button active">Add Vendor</a>
            <a href="/admin/add-customer" class="nav-button">Add Customer</a>
            <a href="/admin/inventory" class="nav-button">Inventory</a>
            <a href="/admin/sales" class="nav-button">Sales Charges</a>
            <form action="/auth/logout" method="GET" style="display: inline;">
                <button type="submit" class="nav-button logout-btn">Logout</button>
            </form>
        </div>
    </header>

    <main class="dashboard-content">
        <div class="content-section">
            <div class="search-section">
                <h2>Search Vendor</h2>
                <div class="search-container-wide">
                    <div class="search-bar-wide">
                        <input type="text" 
                               id="vendorSearch" 
                               class="vendor-search-input" 
                               placeholder="Search vendor by name, GST number, or phone..."
                               autocomplete="off">
                        <button type="button" id="searchBtn">Search</button>
                    </div>
                </div>
            </div>

            <div id="searchResults" class="search-results" style="display: none;">
                <h3>Search Results</h3>
                <div id="resultContent"></div>
            </div>

            <div class="vendor-form">
                <h2>Vendor Details</h2>
                <form id="vendorForm">
                    <input type="hidden" id="vendorId" name="id">
                    <div class="form-group">
                        <label for="name">Vendor Name*</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone Number*</label>
                        <input type="tel" id="phone" name="phone_number" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email">
                    </div>
                    <div class="form-group">
                        <label for="gstNumber">GST Number* (Format: 22AAAAA0000A1Z5)</label>
                        <input type="text" 
                               id="gstNumber" 
                               name="gst_number" 
                               required 
                               pattern="^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}$"
                               placeholder="Example: 22AAAAA0000A1Z5"
                               title="Please enter a valid GST number (Format: 22AAAAA0000A1Z5)">
                        <small class="form-text text-muted">
                            Format: 
                            <ul>
                                <li>First 2 digits: State code (e.g., 22)</li>
                                <li>Next 5 letters: PAN number alphabets</li>
                                <li>Next 4 digits: Entity number</li>
                                <li>Next letter: Entity type</li>
                                <li>Next character: Check sum (1-9/A-Z)</li>
                                <li>Fixed Z</li>
                                <li>Last character: Check digit (0-9/A-Z)</li>
                            </ul>
                        </small>
                    </div>
                    <div class="form-group">
                        <label for="hsnNumber">HSN Number*</label>
                        <input type="text" id="hsnNumber" name="hsn_number" required>
                    </div>
                    <div class="form-group">
                        <label for="invoiceNumber">Invoice Number*</label>
                        <input type="text" id="invoiceNumber" name="invoice_number" required>
                    </div>
                    <div class="form-group">
                        <label for="dateOfSupply">Date of Supply*</label>
                        <input type="date" id="dateOfSupply" name="date_of_supply" required>
                    </div>
                    <div class="form-actions">
                        <button type="submit" id="saveVendor">Save Vendor</button>
                        <button type="button" id="clearForm">Clear Form</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %> 