<%- include('../partials/header', { isDashboard: true }) %>

<div class="dashboard-container">
    <header class="dashboard-header">
        <h1>Admin Dashboard</h1>
        <div class="header-nav">
            <a href="/admin/add-user" class="nav-button">Add Users</a>
            <a href="/admin/inventory" class="nav-button <%= path === '/admin/inventory' ? 'active' : '' %>">Inventory</a>
            <a href="/admin/sales" class="nav-button <%= path === '/admin/sales' ? 'active' : '' %>">Sales</a>
            <form action="/auth/logout" method="GET" style="display: inline;">
                <button type="submit" class="nav-button logout-btn">Logout</button>
            </form>
        </div>
    </header>

    <main class="dashboard-content">
        <div class="content-section">
            <h2>Welcome, <%= user.username %></h2>
            <div class="dashboard-stats">
                <p>Quick overview will appear here...</p>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %> 